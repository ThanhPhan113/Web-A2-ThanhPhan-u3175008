<div class="row">
    <script src="http://maps.googleapis.com/maps/api/js?key=AIzaSyD0wazGV9cGzUwZltHMLkqvvd8JKkKfBZ4"></script>
    <script>
        // Declare a variable for map
        var map;
        // Get lattitude and longitude of Canberra Centre
        var londonCentre = new google.maps.LatLng(-0.1277583, 51.5073509);
        // Initialise the map
        function initMap() {
            // Define the properties for Canberra Centre map
            var londonMap = {
                center: londonCentre,
                zoom: 2,
                mapTypeId: google.maps.MapTypeId.ROADMAP
            };

        

            // Create a map object for Canberra Centre
            // using londonMap and the <div> element with id="googleMap"
            map = new google.maps.Map(
                document.getElementById("googleMap"), londonMap);

            // Add markers below this line
            
            addIBM(map);
            addMicrosoft(map);
            addAmazon(map);
            addGoogle(map);
            addCSIRO(map);
            addDIIS(map);
           

        }
        // Add other functions below this line
        function addIBM(map) {
            // IBM Companny
            var ibm =
                new google.maps.LatLng(-41.9493072, 175.7400367);
            var markerIBM = new google.maps.Marker({
                position: ibm,
            });

            markerIBM.setMap(map);

            var contentIBM =
                ' <h1>IBM New Zealand</h1>' +
                ' <img src="../images/IBMmap.png" ' +
                '      style="float:left; width:25%; margin-right:10px;">' +
                ' <p><b> International Business Machines Corporation(IBM)</b> is an American multinational technology company headquartered ' +
                'in Armonk, New York, United States, with operations in over 170 countries. ' +
                'The company began in 1911 as the Computing - Tabulating - Recording Company(CTR) and was renamed "International Business Machines" in 1924.<br>' +
                '<a href="https://en.wikipedia.org/wiki/IBM">Wikipedia</a>' 
                ' </p>';


            var infoIBM = new google.maps.InfoWindow({
                content: contentIBM
            });

            google.maps.event.addListener(markerIBM, 'click',
                function () {
                    infoIBM.open(map, markerIBM);
                });
        }


